<div class="container">
  <div class="row">
    <div class="col">
      <div class="p-3 mb-2 bg-light text-dark">ショッピングカート</div>
      <div class="text-right"><%= link_to "カートを空にする", cart_items_all_destroy_path, method: :delete, class: "pull-right btn btn-danger" %></div>
      <table class="table table-borderd">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active"> </th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.image, size: "50x50" %><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
                  <%= f.number_field :amount, min:1, max:10, step:1 %>
                  <%= f.submit "変更", class: "btn btn-primary" %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
                  <% @billing_price += cart_item.subtotal %>
              <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="right-block text-right">
        <table class="table table-borderd">
          <tbody>
            <tr>
              <td class="table-active">合計金額</td>
              <td><%= @cart_items.sum(&:subtotal).to_s(:delimited) %>円</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="text-center" >
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
        
      </div>
    </div>
  </div>
</div>