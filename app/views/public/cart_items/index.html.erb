<table class="table">
  <h2>ショッピングカート</h2>
  <%= link_to "カートを空にする", cart_items_all_destroy_path, method: :delete, class: "pull-right btn btn-danger" %>
    <thead>
      <tr>商品名</tr>
      <tr>単価(税込)</tr>
      <tr>数量</tr>
      <tr>小計</tr>
      <tr></tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.image, size: "200x200" %></td>
          <td><%= cart_item.item.name %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
              <%= f.number_field :amount, min:1, max:10, step:1 %>
              <%= f.submit "変更", class: "btn btn-primary" %>
            <% end %>
          </td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              <% @billing_price += cart_item.subtotal %>
          <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<div>
  <tr>
    <tb><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></tb>
  </tr>
  <tr>
    <td>合計金額</td>
    <td><%= @cart_items.sum(&:subtotal).to_s(:delimited) %>円
  </td>
  </tr>
</div>
<div>
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
</div>