<% if @item.errors.any? %>
  <%= @item.errors.count %>件の未入力項目があります
<% end %>
<div class='container'>
  <div class="p-3 mb-2 col-md-2 font-weight-bold bg-light text-dark">商品新規登録</div><br>

  <%= form_with model: @item, url:admin_items_path do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :商品画像 %></div>
        <div class="col-lg-3"><%= f.file_field :image, accept: "image/*" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :商品名 %></div>
        <div class="col-lg-4"><%= f.text_field :name, class: 'form-control item_name' %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :商品説明 %></div>
        <div class="col-lg-4"><%= f.text_area :introduction, class: 'form-control item_introduction' %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :ジャンル %></div>
        <div class="col-lg-3"><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :税抜価格 %></div>
        <div class="col-lg-1"><%= f.text_field :price, class: 'form-control item_price' %></div>
        円
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :販売ステータス %></div>
        <div class="col-lg-1"><%= f.radio_button :is_stated, true %><%= f.label :販売中 %></div>
        <div class="col-lg-2"><%= f.radio_button :is_stated, false  %><%= f.label :販売停止中 %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-2"><%= f.submit '新規登録', class: 'btn btn-success' %></div>
      </div>
    </div>
  <% end %>
</div>