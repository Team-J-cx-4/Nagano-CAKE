<div class='container'>
  <div class="p-3 mb-2 bg-light text-dark">商品新規登録</div><br>
  <div class='row'>
    <%= form_with model: @item, url:admin_items_path do |f| %>
      <div class="form-group">
        <div class="form-inline">
          <div class="row mb-3">
            <tr>
              <%= f.label :商品画像 %>
              <%= f.file_field :image, accept: "image/*" %>
            </tr>
          </div>
        </div>
        <div class="form-inline">
          <div class="row mb-3">
            <tr>
              <%= f.label :商品名 %>
              <%= f.text_field :name, class: 'form-control item_name' %>
            </tr>
          </div>
        </div>
        <div class="form-inline">
          <div class="row mb-3">
            <tr>
              <%= f.label :商品説明 %>
              <%= f.text_area :introduction, class: 'form-control item_introduction' %>
            </tr>
          </div>
        </div>
        <div class="form-inline">
          <div class="row mb-3">
            <tr>
              <%= f.label :ジャンル %>
              <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %>
            </tr>
          </div>
        </div>
        <div class="form-inline">
          <div class="row mb-3">
            <tr>
              <%= f.label :税抜価格 %>
              <%= f.text_field :price, class: 'form-control item_price' %><br>円
            </tr>
          </div>
        </div>
        <div class="form-inline">
          <div class="row mb-3">
            <tr>
              <%= f.label :販売ステータス %>
              <%= f.radio_button :is_stated, true %>
              <%= f.label :販売中 %>
              <%= f.radio_button :is_stated, false  %>
              <%= f.label :販売停止中 %>
            </tr>
          </div>
        </div>
        <div class="row mb-3">
          <tr>
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </tr>
        </div>
      </div>
    <% end %>
  </div>
</div>