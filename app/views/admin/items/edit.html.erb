<div class='container'>
  <div class="p-3 mb-2 bg-light text-dark">商品編集</div><br>
  <div class='row'>
    <%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
      <div class="form-group">
        <table>
          <thead>
            <tr>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><%= f.label :商品画像 %></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th><%= f.label :商品名 %></th>
              <td><%= f.text_field :name, class: 'form-control item_name' %></td>
            </tr>
            <tr>
              <th><%= f.label :商品説明 %></th>
              <td><%= f.text_area :introduction, class: 'form-control item_introduction' %></td>
            </tr>
            <tr>
              <th><%= f.label :ジャンル %></th>
              <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>
            <tr>
              <th><%= f.label :税抜価格 %></th>
              <td><%= f.text_field :price, class: 'form-control item_price' %>円</td>
            </tr>
            <tr>
              <th><%= f.label :販売ステータス %></th>
              <td><%= f.radio_button :is_stated, true %>
                  <%= f.label :販売中 %>
                  <%= f.radio_button :is_stated, false  %>
                  <%= f.label :販売停止中 %></td>
            </tr>
          </tbody>
        </table>
        <tr>
          <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </tr>
      </div>
    <% end %>
  </div>
</div>