<div>
  <%= flash[:item_create] %>
</div>
<div class='container'>
  <div class='row'>
    <div class="p-3 mb-2 bg-light text-dark">商品一覧</div>
    <div class="text-right">
      <%= link_to "＋" ,new_admin_item_path, class: 'btn btn-success' %>
  　</div>
    <table class='table'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name ,admin_item_path(item) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_stated == true %>
              <strong class="text-success">販売中</strong>
            <% else %>
              <strong class="text-secondary">販売停止中</strong>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>