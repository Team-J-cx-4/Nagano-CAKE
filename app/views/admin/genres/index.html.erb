<div class='container'>
  <div class='row'>
    <div class="col-xs-10 col-xs-offset-1">
      <div class="p-3 mb-2 col-mb-2 bg-light text-dark">ジャンル一覧・追加</div><br>
      <%= form_with model: @genre, url:admin_genres_path do |f| %>
        <div class="form-group">
          <tr>
            <%= f.label :ジャンル名 %>
            <%= f.text_field :name, class: 'form-control genre_name' %>
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </tr>
        </div>
      <% end %>
      <table class='table'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>