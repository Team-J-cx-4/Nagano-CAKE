<div class='container'>
  <div class="p-3 mb-4 col-md-4 font-weight-bold bg-light text-dark">注文履歴詳細</div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3">購入者</div>
        <div class="col-lg-3"><%= link_to admin_customer_path(@order.customer) do %>
          <%= @order.customer.last_name %>　<%= @order.customer.first_name %><% end %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3">配送先</div>
        <div class="col-lg-3"><%= @order.address %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3">注文日</div>
        <div class="col-lg-3"><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3">支払方法</div>
        <div class="col-lg-3"><%= @order.payment_method_i18n %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>
     <div class="form-group">
      <div class="row">
        <div class="col-lg-3">注文ステータス</div>
        <div class="col-lg-3"><%= form_with(model: @order, url: admin_order_path, local: true, class: "form-row") do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6"  %>
           <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
        </div>
        <div class="col-lg-3"></div>
      </div>
    </div>
  <div class="row">
    <div class="col-lg-9">
      <table class="table">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価（税込）</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.price_tax * 1.1).floor.to_s(:delimited, delimiter: ',') %></td>
              <td><%= order_detail.amount %></td>
              <td><%= (order_detail.price_tax * order_detail.amount * 1.1).floor.to_s(:delimited, delimiter: ',') %></td>
              <td>
                <%= form_with(model: order_detail, url: admin_order_detail_path(order_detail), local: true, class: "form-row") do |f| %>
                <%= f.select :status, OrderDetail.statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6" %>
                <%= f.submit '更新',class:"btn btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-3">
      <table>
        <tbody>
          <tr>
            <td><strong>商品合計</strong></td>
            <td class="ml-2"><%= (@order.billing_price - @order.postage).to_s(:delimited, delimiter: ',') %></td>
          </tr>
          <tr>
            <td><strong>送料</strong></td>
            <td class="ml-2"><%= @order.postage.to_s(:delimited, delimiter: ',') %></td>
          </tr>
          <tr>
            <td><strong>請求合計金額</strong></td>
            <td class="ml-2"><strong><%= @order.billing_price.to_s(:delimited, delimiter: ',') %></strong></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>